{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "add-route input",
    "$id": "http://schema.nethserver.org/traefik/add-route-input.json",
    "description": "Reserve a HTTP route",
    "examples": [
        {
            "domain": "voice.nethserver.org",
            "address": [
                "sip:127.0.0.1:5080",
                "sip:127.0.0.1:5081"
            ]
        }
    ],
    "type": "object",
    "required": [
        "domain",
        "address"
    ],
    "properties": {
        "domain": {
            "type": "string",
            "title": "SIP domain",
            "format": "idn-hostname",
            "examples": [
                "voice.nethserver.org"
            ]
        },
        "address": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type":"string"
            },
            "title": "Backend Asterisk",
            "description": "A list of Asterisk URI."
        }
    }
}